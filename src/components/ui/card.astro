---
import addToCartIcon from "../../assets/icons/bt_add_to_cart.svg";
const { img, price, title } = Astro.props;
---

<div class="card">
  <img
    src={img ??
      "https://images.pexels.com/photos/276517/pexels-photo-276517.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"}
    alt="card-image"
  />
  <div class="card-info">
    <div>
      <p>${price ?? '120.00'}</p>
      <p>{title ?? 'Bike'}</p>
    </div>
    <figure>
      <img src={addToCartIcon.src} alt="add-to-cart-icon" />
    </figure>
  </div>
</div>
