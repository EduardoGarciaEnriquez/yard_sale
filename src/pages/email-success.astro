---
import AuthLayout from "../layouts/AuthLayout.astro";
import envelope from "../assets/icons/email.svg";
import PrimaryButton from "../components/ui/primary_button.astro";
import Logo from "../components/ui/logo.astro";
---

<AuthLayout title="Email Sent | Yard Sale">
  <>
    <Logo />
    <h1 class="title">Email has been sent!</h1>
    <p class="subtitle">
      Please checkout your inbox for instructions on how to reset your password.
    </p>
    <div class="email-image">
      <img src={envelope.src} alt="envelope" />
    </div>
    <PrimaryButton>Login</PrimaryButton>

    <p class="resend">Didn't recieve email? <a href="/">Resend</a></p>
  </>
</AuthLayout>
